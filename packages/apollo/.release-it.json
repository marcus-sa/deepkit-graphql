{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "refactor",
            "section": "Refactor"
          },
          {
            "type": "docs",
            "section": "Documentations"
          },
          {
            "type": "revert",
            "section": "Revert"
          }
        ]
      },
      "infile": "packages/apollo/CHANGELOG.md",
      "parserOpts": {
        "headerPattern": "^(\\w*)(?:\\((apollo-graphql*)\\))?\\: (.*)$"
      }
    },
    "@release-it/bumper": {
      "in": {
        "file": "packages/apollo/package.json",
        "path": "version"
      },
      "out": [
        {
          "file": "packages/apollo/package.json",
          "path": "version"
        },
        {
          "file": "dist/packages/apollo/package.json",
          "path": "version"
        }
      ]
    }
  },
  "git": {
    "commitMessage": "chore(apollo-graphql): release ${version}",
    "tagName": "apollo-graphql-v${version}",
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publishPath": "dist/packages/apollo",
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "apollo-graphql ${version}"
  },
  "hooks": {
    "after:bump": "git checkout -- package.json",
    "before:github:release": "npm publish dist/packages/apollo"
  },
  "ci": true
}
